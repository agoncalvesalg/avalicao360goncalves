<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns='http://www.ehcache.org/v3'
         xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.0.xsd">

    <cache-template name="simple">
        <expiry>
            <ttl unit="seconds">3600</ttl>
        </expiry>
        <heap>100</heap>
    </cache-template>

    <cache alias="br.ibm.com.domain.User" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.Authority" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.User.authorities" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.PersistentToken" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.User.persistentTokens" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.Equipe" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.Equipe.membros" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.AvaliacaoModelo" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.Pergunta" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.Resposta" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.Avaliacao" uses-template="simple"/>

    <cache alias="br.ibm.com.domain.Avaliacao.respostas" uses-template="simple"/>

    <!-- jhipster-needle-ehcache-add-entry -->
</config>
